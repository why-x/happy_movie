<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_25"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/my_border"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="当前密码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/my_phone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:text="130****1212"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_267"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/r1_2"
            android:background="#f2f2f2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="重置密码为"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:background="@android:color/transparent"
                android:id="@+id/re_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:text="18801039357"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_267"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/r1_2"
            android:background="#f2f2f2" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="请再次输入密码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:background="@android:color/transparent"
                android:id="@+id/new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:text="18801039357"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


    </LinearLayout>
<ImageView
    android:layout_alignParentBottom="true"
    android:layout_width="@dimen/dp_60"
    android:layout_height="@dimen/dp_60"
    android:id="@+id/reset_return"
    android:src="@drawable/ic_xiangqing_back"/>
</RelativeLayout>