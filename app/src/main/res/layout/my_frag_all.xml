<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/my_back">

        <ImageView
            android:id="@+id/my_head"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@drawable/my_head" />

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"

            android:text="冬天来了"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/my_sign"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_28"
            android:layout_below="@id/my_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/my_sign_shape"
            android:text="签到"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:src="@drawable/my_remind" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_below="@id/r1"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/my_border"
        android:paddingLeft="@dimen/dp_30">

        <ImageButton
            android:id="@+id/my_message"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/my_messiage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_message"
            android:layout_marginTop="@dimen/dp_10"
            android:text="我的信息" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_below="@id/r2"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/my_border"
        android:paddingLeft="@dimen/dp_30">

        <ImageButton
            android:id="@+id/my_love"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/my_attention" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_love"
            android:layout_marginTop="@dimen/dp_10"
            android:text="我的关注" />

        <ImageButton
            android:id="@+id/my_rccord"
            android:layout_toRightOf="@id/my_love"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/my_rccord" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_rccord"
            android:layout_toRightOf="@id/my_love"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:text="购票记录" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_below="@id/r3"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/my_border"
        android:paddingLeft="@dimen/dp_30">

        <ImageButton
            android:id="@+id/my_feedback"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/my_feedback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_feedback"
            android:layout_marginTop="@dimen/dp_10"
            android:text="意见反馈" />

        <ImageButton
            android:id="@+id/my_version"
            android:layout_toRightOf="@id/my_feedback"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/my_version" />

        <TextView
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_version"
            android:layout_toRightOf="@id/my_feedback"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:text="最新版本" />
        <ImageButton
            android:id="@+id/my_logout"
            android:layout_toRightOf="@id/my_version"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/my_logout" />

        <TextView

            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_logout"
            android:layout_toRightOf="@id/my_version"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:text="退出登录" />
    </RelativeLayout>
