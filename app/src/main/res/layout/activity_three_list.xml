<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.why.happy_movie.activity.ThreeListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/detail_icon_location_default"/>


        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:text="北京"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_shape"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/com_icon_search_default"/>
            <EditText
                android:id="@+id/et_sou"
                android:layout_width="@dimen/dp_150"
                android:background="@null"
                android:textSize="@dimen/sp_10"
                android:hint="输入要搜索的影片"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_sou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="搜索"/>

        </LinearLayout>


    </LinearLayout>


    <!--111111111111111111111111111111111111111111-->

    <RadioGroup
        android:id="@+id/rg_aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_one"
            android:layout_width="@dimen/dp_83"
            android:layout_height="wrap_content"
            android:background="@drawable/yyt_sel"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:textColor="#333333"
            android:button="@null"
            android:text="热门电影"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/rb_two"
            android:layout_width="@dimen/dp_83"
            android:layout_height="wrap_content"
            android:background="@drawable/yyt_sel"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_5"
            android:textColor="#333333"
            android:gravity="center"
            android:button="@null"
            android:text="正在热映"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/rb_three"
            android:layout_width="@dimen/dp_83"
            android:layout_height="wrap_content"
            android:background="@drawable/yyt_sel"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:button="@null"
            android:text="即将上映"/>


    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@drawable/ic_xiangqing_back"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24"/>

</RelativeLayout>
