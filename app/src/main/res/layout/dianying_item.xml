<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_20"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_126"
        android:layout_height="@dimen/dp_164">

       <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simp_cinema_flow"
            android:layout_width="@dimen/dp_126"
            android:layout_height="@dimen/dp_164"
           android:background="#fff"
            app:roundedCornerRadius="@dimen/dp_8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/home_shape"
            android:layout_alignParentBottom="true"
            >
            <View
                android:id="@+id/xian"
                android:background="@drawable/shape_yyt"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_10"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/xian"
                android:layout_centerVertical="true"
                android:id="@+id/text_cinema_flow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="1111111"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>