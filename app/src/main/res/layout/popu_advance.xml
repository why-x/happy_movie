<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/popu_shape"
        android:layout_marginTop="@dimen/dp_110"
        android:paddingLeft="@dimen/dp_24"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_24">

        <TextView
            android:id="@+id/adavance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影评"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_35"
            android:layout_height="3dp"
            android:layout_below="@id/adavance"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/details_btn" />

        <ImageView
            android:id="@+id/comment_return"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@drawable/down" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_recycler"
            android:layout_below="@id/adavance"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        <ImageView
            android:id="@+id/ad_return"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_xiangqing_back" />

        <ImageView
            android:id="@+id/publish"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@android:color/transparent"
            android:src="@drawable/publish_defaulti" />
    </RelativeLayout>
</RelativeLayout>