<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/popu_shape"
        android:layout_marginTop="@dimen/dp_110"
        android:paddingLeft="@dimen/dp_24"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_24">

        <TextView
            android:id="@+id/adavance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影评"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_35"
            android:layout_height="3dp"
            android:layout_below="@id/adavance"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/details_btn" />

        <ImageView
            android:id="@+id/comment_return"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@drawable/down" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_recycler"
            android:layout_below="@id/adavance"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@drawable/shape_yyt2">

                <EditText
                    android:id="@+id/et_pl"
                    android:layout_margin="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:background="@android:color/transparent"
                    android:textColorHint="#999999"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:hint="写评论"/>

            </LinearLayout>



            <Button
                android:id="@+id/fabiaopl"
                android:layout_width="@dimen/dp_58"
                android:layout_gravity="right"
                android:layout_height="@dimen/dp_32"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:background="@drawable/details_btn"
                android:text="发表"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ad_return"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_xiangqing_back" />

        <ImageView
            android:id="@+id/publish"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@android:color/transparent"
            android:src="@drawable/publish_defaulti" />

        <LinearLayout
            android:id="@+id/ll8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:visibility="gone">

            <Button
                android:id="@+id/quxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"/>
            <EditText
                android:id="@+id/et_pl2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="回复评论"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/huifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>